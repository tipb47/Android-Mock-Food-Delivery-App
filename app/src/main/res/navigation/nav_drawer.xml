<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_drawer"
    app:startDestination="@id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="ttbrowne.c323.finalandroidproject.HomeScreen"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreen_to_restaurantScreen"
            app:destination="@id/restaurantScreen" />
    </fragment>
    <fragment
        android:id="@+id/homeScreenTop"
        android:name="ttbrowne.c323.finalandroidproject.HomeScreenTop"
        android:label="fragment_home_screen_top"
        tools:layout="@layout/fragment_home_screen_top" />
    <fragment
        android:id="@+id/homeScreenBottom"
        android:name="ttbrowne.c323.finalandroidproject.HomeScreenBottom"
        android:label="fragment_home_screen_bottom"
        tools:layout="@layout/fragment_home_screen_bottom" />
    <fragment
        android:id="@+id/recentOrders"
        android:name="ttbrowne.c323.finalandroidproject.RecentOrders"
        android:label="fragment_recent_orders"
        tools:layout="@layout/fragment_recent_orders" >
        <action
            android:id="@+id/action_recentOrders_to_placedOrder"
            app:destination="@id/placedOrder" />
    </fragment>
    <fragment
        android:id="@+id/calendarView"
        android:name="ttbrowne.c323.finalandroidproject.CalendarView"
        android:label="fragment_calendar_view"
        tools:layout="@layout/fragment_calendar_view" />
    <fragment
        android:id="@+id/restaurantScreen"
        android:name="ttbrowne.c323.finalandroidproject.RestaurantScreen"
        android:label="fragment_restaurant_screen"
        tools:layout="@layout/fragment_restaurant_screen" >
        <action
            android:id="@+id/action_restaurantScreen_to_checkoutScreen"
            app:destination="@id/checkoutScreen" />
    </fragment>
    <fragment
        android:id="@+id/checkoutScreen"
        android:name="ttbrowne.c323.finalandroidproject.CheckoutScreen"
        android:label="fragment_checkout_screen"
        tools:layout="@layout/fragment_checkout_screen" >
        <action
            android:id="@+id/action_checkoutScreen_to_placedOrder"
            app:destination="@id/placedOrder" />
        <action
            android:id="@+id/action_checkoutScreen_to_restaurantScreen"
            app:destination="@id/restaurantScreen" />
    </fragment>
    <fragment
        android:id="@+id/placedOrder"
        android:name="ttbrowne.c323.finalandroidproject.PlacedOrder"
        android:label="fragment_placed_order"
        tools:layout="@layout/fragment_placed_order" >
        <action
            android:id="@+id/action_placedOrder_to_mapScreen"
            app:destination="@id/mapScreen" />
    </fragment>
    <fragment
        android:id="@+id/mapScreen"
        android:name="ttbrowne.c323.finalandroidproject.MapScreen"
        android:label="fragment_map_screen"
        tools:layout="@layout/fragment_map_screen" />
    <fragment
        android:id="@+id/restaurantScreenTop"
        android:name="ttbrowne.c323.finalandroidproject.RestaurantScreenTop"
        android:label="fragment_restaurant_screen_top"
        tools:layout="@layout/fragment_restaurant_screen_top" />
    <fragment
        android:id="@+id/restaurantScreenBottom"
        android:name="ttbrowne.c323.finalandroidproject.RestaurantScreenBottom"
        android:label="fragment_restaurant_screen_bottom"
        tools:layout="@layout/fragment_restaurant_screen_bottom" />
    <fragment
        android:id="@+id/restaurantImageFragmentDisplay"
        android:name="ttbrowne.c323.finalandroidproject.RestaurantImageFragmentDisplay"
        android:label="fragment_restaurant_image_display"
        tools:layout="@layout/fragment_restaurant_image_display" />
    <fragment
        android:id="@+id/placedOrderExtension"
        android:name="ttbrowne.c323.finalandroidproject.PlacedOrderExtension"
        android:label="fragment_placed_order_extension"
        tools:layout="@layout/fragment_placed_order_extension" />

</navigation>